<div class="container">
<%= form_tag("/studies/#{@study.id}", method: :patch) do %>
  <h3 style="color:green;"><strong>編集する</strong></h3>
    <form>
        <div class="form-group">
            <label>相談の概要</label>
            <input type="text" name="title" class="form-control" value="<%= @study.title %>">
        </div>
        <div class="form-group">
            <label>相談の内容</label>
            <textarea name="content" class="form-control" rows="10"><%= @study.content %></textarea>
        </div>
        <button type="submit", class="study-submit">投稿する</button>
    </form>
<% end %>
</div>