<div class="container">
<%= form_tag('/studies', method: :post) do %>
  <h3 style="color:green;"><strong>勉強に関する相談をする</strong></h3>
    <form>
        <div class="form-group">
            <label style="margin-top:15px;">相談の概要</label>
            <input type="text" name="title" class="form-control">
        </div>
        <div class="form-group">
            <label>相談の内容</label>
            <textarea name="content" class="form-control" rows="10"></textarea>
        </div>
        <button type="submit", class="study-submit">投稿する</button>
    </form>
<% end %>
</div>