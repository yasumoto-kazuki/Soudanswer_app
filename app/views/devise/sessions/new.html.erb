
<div class="container" style="text-align:center;">

<h2 style="color:green;">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレスを入力" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "パスワードを入力" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :この情報を保存する %>
    </div>
  <% end -%>

<div class="form-group">
<div class="col-sm-offset-4 col-sm-8">
    <%= f.submit "ログインする", :class => "actions", :style =>"align:center;margin-left:72px;" %>
  </div>
  </div>

<% end %>

 <%= render "devise/shared/links" %>

</div>
